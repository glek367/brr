<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Онлайн-сервис игр (Главная)"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/sessionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Статус: Загрузка..."
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Мой Профиль"
        android:backgroundTint="@color/design_default_color_secondary"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Каталог (пока отключен)"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Функционал каталога отключен. Доступна только Auth и Профиль."
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#EEE"
        android:scrollbars="vertical"
        android:maxLines="10"/>

</LinearLayout>